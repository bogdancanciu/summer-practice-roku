sub init()
    m.poster = m.top.findNode("poster")
    m.title = m.top.findNode("title")

    setTheme()
end sub

sub onContentChanged(event as Object)
    content = event.getData()

    m.title.text = content.title
    m.poster.uri = content.imageUri
end sub

sub setTheme()
    m.title.font.size = 24
end sub
